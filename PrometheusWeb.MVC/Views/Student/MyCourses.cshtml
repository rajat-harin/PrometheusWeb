@model IEnumerable<PrometheusWeb.Data.UserModels.EnrollmentUserModel>
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
@{
    ViewBag.Title = "MyCourses";
}
<div class="container">
    <h2>My Enrolled Courses</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">EnrollmentID: #@Html.DisplayFor(modelItem => item.EnrollmentID)</h6>
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Course.Name)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">CourseID: #@Html.DisplayFor(modelItem => item.CourseID)</h6>
                    <p class="card-text">Start Date: @Html.DisplayFor(modelItem => item.Course.StartDate)</p>
                    <p class="card-text">End Date: @Html.DisplayFor(modelItem => item.Course.EndDate)</p>
                </div>
            </div>
        }
    </div>
</div>