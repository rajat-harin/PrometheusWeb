@model PrometheusWeb.Data.UserModels.HomeworkUserModel
@{
    ViewBag.Title = "AddOrEditHomeworks";
}

<div style="padding-left:700px; ">
    <h2>Add Student</h2>
</div>
@using (Html.BeginForm("AddOrEditHomeworks", "Homework", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div style="padding-left:665px; ">
        <h4>Create a new Homework.</h4>
    </div>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.HomeWorkID)
    <div class="form-group" style="padding-left:540px">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Description)
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
    <div class="form-group" style="padding-left:540px">
        @Html.LabelFor(m => m.LongDescription, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.LongDescription)
            @Html.ValidationMessageFor(m => m.LongDescription)
        </div>
    </div>
    <div class="form-group" style="padding-left:540px">
        @Html.LabelFor(m => m.Deadline, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Deadline)
            @Html.ValidationMessageFor(m => m.Deadline)
        </div>
    </div>
    <div class="form-group" style="padding-left:540px">
        @Html.LabelFor(m => m.ReqTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ReqTime)
            @Html.ValidationMessageFor(m => m.ReqTime)
        </div>
    </div>
    <div class="form-group" style="padding-left:750px">
        <input type="submit" value="Submit" class="btn button" />
        <input type="reset" value="Reset" class="btn button" />
    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}

