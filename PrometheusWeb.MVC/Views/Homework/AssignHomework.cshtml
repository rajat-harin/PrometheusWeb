@model PrometheusWeb.Data.UserModels.AssignmentUserModel
    ViewBag.Title = "AssignHomework";
}
<style>

    .btn:hover {
        background-color: lightgreen;
        right: 0px;
    }

    p {
        color: gray;
        font-weight: bold;
    }


    .column {
        float: left;
        width: 19%;
        margin: 3%;
    }

    /* Remove extra left and right margins, due to padding in columns */
    .row {
        margin: 0 -5px;
    }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

    /* Style the counter cards */
    .card {
        border: groove;
        border-color: #027dc5;
        border-radius: 10%;
        box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.2); /* this adds the "card" effect */
        padding: 16px;
        text-align: center;
        background: linear-gradient(-45deg, #36d1dc, #5b86e5);
    }

        .card:hover {
            transform: scale(1.1);
        }
</style>
@using (Html.BeginForm("AssignHomework", "Homework", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container" style="padding-left:27%; padding-top:7%">
        <h2>Assign Homework For Course</h2>
        <div class="row">
            <div class="column">
                <div class="card text-center" style="width: 30rem;">

                    <div class="card-body">
                        <div>
                            <h2 class="card-text" style="color:black; font-weight:bold">
                                @Html.DisplayFor(model => model.HomeWorkID, new { disabled = "disabled", @readonly = "readonly" })
                            </h2>
                        </div>
                        <div>
                            <h4 class="card-text" style="color:black; font-weight:bold">
                                <label class="control-label col-md-4" style="padding:20px; margin-left:30%;">Select Course</label>

                                @Html.DropDownListFor(model => model.CourseID, ViewBag.CourseList as SelectList, "---Select Course--", new { @class = "form-control" })

                            </h4>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Assign Homework" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
}