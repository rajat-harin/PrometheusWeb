@model IEnumerable<PrometheusWeb.Data.UserModels.CourseUserModel>

@{
    ViewBag.Title = "ViewCourses";
}

<h2>ViewCourses</h2>
<p>
    <a href="@Url.Action("MyCourses","Teacher")" class="btn btn-primary">Show My Courses</a>
</p>
@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
@using (Html.BeginForm())
{

    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a href="@Url.Action("SaveCourses","Teacher",new {courseId=item.CourseID,
                        teacherId = 1})" class="btn btn-primary">Save Course</a>
                </td>
            </tr>
        }
    </table>
}

